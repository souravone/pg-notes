{
  "name": "pg-notes",
  "scripts": {
    "server": "bun run --hot server/index.ts",
    "client": "cd client && bun run dev",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "db:up": "docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "bunx drizzle-kit studio",
    "db:seed": " bun run ./scripts/seed-local-db.ts",
    "open-auth-docs": "open-cli http://localhost:3000/api/auth/reference"
  },
  "dependencies": {
    "better-auth": "^1.3.26",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.9",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.5",
    "drizzle-seed": "^0.3.1",
    "open-cli": "^8.0.0"
  }
}
